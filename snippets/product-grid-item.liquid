{%- comment %}<locksmith:b940>{% endcomment -%}
  {%- assign locksmith_ea8a_product__first_available_variant = nil %}{% assign locksmith_ea8a_product__selected_variant = nil %}{% assign locksmith_ea8a_product__price = nil %}{% assign locksmith_ea8a_product__price_min = nil %}{% assign locksmith_ea8a_product__price_max = nil %}{% assign locksmith_ea8a_product__price_varies = false %}{% assign locksmith_ea8a_product__compare_at_price = nil %}{% for variant in product.variants %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: variant, subject_parent: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: variant, subject_parent: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif %}{% if locksmith_ea8a_product__first_available_variant == nil and variant.available %}{% assign locksmith_ea8a_product__first_available_variant = variant %}{% endif %}{% if locksmith_ea8a_product__selected_variant == nil and variant.selected %}{% assign locksmith_ea8a_product__selected_variant = variant %}{% endif %}{% if variant == product.selected_or_first_available_variant %}{% assign locksmith_ea8a_product__selected_or_first_available_variant = product.selected_or_first_available_variant %}{% endif %}{% if locksmith_ea8a_product__price == nil %}{% assign locksmith_ea8a_product__price = variant.price %}{% endif %}{% if locksmith_ea8a_product__price_min == nil or variant.price < locksmith_ea8a_product__price_min %}{% assign locksmith_ea8a_product__price_min = variant.price %}{% endif %}{% if locksmith_ea8a_product__price_max == nil or locksmith_ea8a_product__price_max < variant.price %}{% assign locksmith_ea8a_product__price_max = variant.price %}{% endif %}{% if locksmith_ea8a_product__compare_at_price == nil %}{% assign locksmith_ea8a_product__compare_at_price = variant.compare_at_price %}{% endif %}{% endfor %}{% if locksmith_ea8a_product__selected_or_first_available_variant == nil %}{% assign locksmith_ea8a_product__selected_or_first_available_variant = locksmith_ea8a_product__first_available_variant %}{% endif %}{% if locksmith_ea8a_product__price_min != locksmith_ea8a_product__price_max %}{% assign locksmith_ea8a_product__price_varies = true %}{% endif -%}
{%- comment %}</locksmith:b940>{% endcomment -%}

<div class="shop-item-hme">
  <a href="{{ product.url | within: collection }}">
    <figure><img src="{{ product | img_url: '1024x1024' }}" alt="{{ product.featured_image.alt | escape }}" /></figure>
  </a>
  <div class="rating">
    <div class="yotpo bottomLine"
     style="display:inline-block"
     data-product-id="{{ product.id }}">
    </div>
  </div>
  <a href="{{ product.url | within: collection }}">
    <h2>{{ product.title }}</h2>
    
    {% if product.handle == "try-rasa" %}
    <p>4 servings each of our products + FREE SHIPPING. Discover the right Rasa(s) for you!</p>
    {% elsif product.handle == "whole-rasa-koffee-8-oz" %}
    <p>For our die-hards who love making Rasa in big batches.</p>
    {% elsif product.handle == "ground-rasa-koffee-8-oz" %}
    <p>Our most potent adaptogenic experience. Brew on its own or with coffee.  ‚òï</p>
    {% elsif product.handle == "cacao-rasa-1" %}
    <p>An indulgent treat you can say yes to. Adaptogens + Criollo Cacao = üòç</p>
    {% elsif product.handle == "dirty-rasa-8-oz-32-servings" %}
    <p>Your daily coffee, now with a hug for your nervous system. ü§ó</p>
   {% elsif product.handle == "energy-engineer" %}
    <p>If you're weaning off coffee, or want to recalibrate your relationship to caffeine.</p>
    {% elsif product.handle == "cacao-original-rasa-bundle" %}
    <p>Our √ºber-low caffeine bundle--less than 5 mg in Cacao Rasa, 0 mg in Original, for centered, balanced energy.</p>
    {% elsif product.handle == "energy-lush" %}
    <p>You're welcome to drink these two separately, but we don't think you're gonna want to.</p>
    {% elsif product.handle == "energy-alchemist-1" %}
    <p>$10 OFF our all-star adaptogen blends. Mix & match for daily energy alchemy.</p>
    {% elsif product.handle == "make-your-case"%}
    <p>Save $20 when you buy 6 bags, + get a free travel trio!</p>
    {% endif %}
    
    
    
    
    <span class="item-meta"><span class="price">{% if locksmith_ea8a_product__price_varies %}From {% endif %}{{ locksmith_ea8a_product__price | money }}{% if on_sale %}<s class="compare-at-price">{{ locksmith_ea8a_product__compare_at_price | money }}</s>{% endif %}</span></span>
  </a>
  
     <form action="/cart/add" data-productid="{{product.id}}" method="post" enctype="multipart/form-data">

      {% assign hide_default_title = false %}
      {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
        {% assign hide_default_title = true %}
      {% endif %}

        <div id="product-price" itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="delta">
        <meta itemprop="priceCurrency" content="{{ shop.currency }}" />
       
      </div>
       

      <div class="product-quantities">
        <div id="product-variants" class="{% if hide_default_title %} hidden{% endif %}">
          <select id="product-select" name="id" data-productid="{{product.id }}" class="col-variants">
          {% for variant in product.variants %}
            {%- comment %}<locksmith:a687>{% endcomment -%}
              {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: variant, subject_parent: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
            {%- comment %}</locksmith:a687>{% endcomment -%}
            <option{% if variant == locksmith_ea8a_product__selected_or_first_available_variant %} selected{% endif %} value="{{ variant.id }}">
            {{ variant.title }} - {{ variant.price | money }}
            </option>
          {% endfor %}
          </select>
        </div>
      </div>

       {% for current_variant in product.variants %}
        {%- comment %}<locksmith:0939>{% endcomment -%}
          {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: current_variant, subject_parent: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
        {%- comment %}</locksmith:0939>{% endcomment -%}
        {% if current_variant == locksmith_ea8a_product__selected_or_first_available_variant %}
          {% if current_variant.inventory_quantity > 0 %}
            <input type="submit" name="add" id="add" class="button addtocart addc custom-form-butom-product" value="Add To Cart" data-loc="collection">
          {% else %}
            <input type="submit" name="add" id="add" class="button-red addtocart disabled" value="Sold Out" data-loc="single" disabled="" style="width:100%;margin-top:10px;">
          {% endif %}
        {% endif %}
      {% endfor %}
     
      </form>
</div>


