<div class="container">    
  <div class="archive-posts">
    {% for article in blog.articles %}
      {%- comment %}<locksmith:641e>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: article, subject_parent: blog, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
      {%- comment %}</locksmith:641e>{% endcomment -%}
      {% include 'article-grid-item' with products_per_row %}
    {% endfor %}
  </div>
  {% if blog.handle contains 'press' %}
    <p style="text-align: center;"><strong>Press and Social Media Inquires</strong><br/>Please email hello@wearerasa.com</p>
  {% endif %} 
</div>