<style>
  .block-section {
    display: inline-block;
    width: 100%;
    position: relative;
  }

  .block-title {
    color: #17A7A1;
    font-family: Recoleta;
    font-size: 50px;
    text-transform: uppercase;
  }

  .signup-section {
    height: 420px;
    padding: 60px 0;
  }

  .block-{{blockName}} {
    background-color: {{ section.settings.block-background-color }};
  }

  .signup-text {
    color: #17A7A1;
  }

  .signup-text { text-align: center; }

