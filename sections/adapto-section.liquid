<div class="adapto-section">
	<div class='page-width'>
  		{% if section.settings.title != blank %}
      		<h2 class="text-center">{{ section.settings.title | escape }}</h2>
		{% endif %}
      	{% if section.settings.paragraph != blank %}
      		<p class='text-center'>{{ section.settings.paragraph }}</p>
		{% endif %}
        <div class="product-slider">
          {%- for block in section.blocks -%}
              <div class="col-md-3 adapto-slide">
                {%- if block.settings.imageslide != blank -%}
                  <div class=''>
                    <img class="" src="{{ block.settings.imageslide | img_url: 'master' }}">
                  </div>
                {%- endif -%}
                {%- if block.settings.slideheading != blank -%}
                <h3 class="text-center">{{ block.settings.slideheading | escape }}</h3>
                {%- endif -%}
                {%- if block.settings.slidecontent != blank -%}
                <h4 class="text-center">{{ block.settings.slidecontent | escape }}</h4>
                {%- endif -%}
              </div>
            
          {%- endfor -%}
      	</div>
      
<!--         {%- if section.settings.fullimage != blank -%}
          <div class=''>
            <img class="feature-row__image lazyload" src="{{ section.settings.fullimage | img_url: '200x200' }}">
          </div>
         {%- endif -%} -->
      	
         {% if section.settings.link != blank %}
			<a class="benefit-link" href="{{ section.settings.link }}">{{ section.settings.btntxt }}</a>
		 {% endif %}
      
  	</div>
</div>



