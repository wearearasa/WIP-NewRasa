<div class="homeshop-section">
  <div class='page-width'>
    <div class="shop-btn">
      {%- for block in section.blocks -%}
      <button class="btn slide-btn" data-titleshop="{{ block.settings.titleshop | replace: ' ', '-' }}">{{ block.settings.titleshop | escape }}</button>
      {%- endfor -%}
    </div>
    <div class="shop-rasa">
      <div class="bg-image">
      	{%- if section.settings.shopimage != blank -%}
              <img src="{{ section.settings.shopimage | img_url: 'master' }}">
          {%- endif -%}
      </div>
      <div class="rasa-slider">
        {%- for block in section.blocks -%}
            <div class="section-rasa" data-titleshop="{{ block.settings.titleshop | replace: ' ', '-' }}">
              <div class="col-md-7">
                <div class="rasa-left">
                  {%- if block.settings.titleshop != blank -%}
                    <h2 class="text-center">{{ block.settings.titleshop | escape }}</h2>
                  {%- endif -%}
                  {%- if block.settings.titlehead != blank -%}
                    <h4 class="text-center">{{ block.settings.titlehead | escape }}</h4>
                  {%- endif -%}
                  <div class="mobile-shop-image">
                    {%- if block.settings.shopparagraph != blank -%}
                      <img src="{{ block.settings.shopslide | img_url: 'master' }}">
                    {%- endif -%}
                  </div>
                  {%- if block.settings.shopparagraph != blank -%}
                    <div class="text-center home-product-dec">{{ block.settings.shopparagraph }}</div>
                  {%- endif -%}
                  {% if block.settings.link != blank %}
                    <a class="benefit-link" href="{{ block.settings.link }}">{{ block.settings.btntxt }}</a>
                  {% endif %}
                </div>
              </div>
              <div class="col-md-5">
                <div class="rasa-right desktop-shop-image">
                  {%- if block.settings.shopparagraph != blank -%}
                    <img src="{{ block.settings.shopslide | img_url: 'master' }}">
                  {%- endif -%}
                </div>	
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
  </div>
</div>
<div class="shopimage-bottom">
  		{%- if section.settings.shopbottom != blank -%}
        	<img src="{{ section.settings.shopbottom | img_url: 'master' }}">
        {%- endif -%}
  </div>


